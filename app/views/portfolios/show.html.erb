<div class="container">
  <div class="row">
    <div class="col-md-7">
      <%= image_tag @portfolio.main_image if !@portfolio.main_image.nil?%>
    </div>
    <div class="col-md-5">
        <h2><%=  @portfolio.title %></h2>
        <em><%=  @portfolio.subtitle %></em>
        <p><%=   @portfolio.body%></p>

        <h2>Technologies Used:</h2>
        <% @portfolio.technologies.each do |t| %>
        <p><%= t.name %></p>
        <% end %>
        <%= link_to "View all portfolios", portfolios_path %>
    </div>

  </div>

</div>


